<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pitholemanagment">

    <application
        android:allowBackup="true"
        android:icon="@drawable/road"
        android:label="@string/app_name"
        android:roundIcon="@drawable/road"
        android:supportsRtl="true"
        android:theme="@style/Theme.PitholeManagment">
        <activity
            android:name=".Activity.ForgetPass"
            android:label="@string/title_activity_forget_pass"
            android:theme="@style/Theme.PitholeManagment.NoActionBar"></activity>
        <activity
            android:name=".Activity.Splash"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.PitholeManagment.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.PitholeManagment.NoActionBar"></activity>
        <activity
            android:name=".Activity.Main"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.PitholeManagment.NoActionBar" />
        <activity
            android:name=".Activity.Register"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.PitholeManagment.NoActionBar" />
    </application>

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>